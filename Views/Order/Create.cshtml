@model OrderDto;

@{
    ViewData["Title"] = "Create Order";
}

<br />

<h2>Create Order</h2>

<form method="POST">

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label" for="exampleInputEmail1">Order Id</label>

        <div class="col-sm-6 ">
            <input class="form-control" asp-for="orderId" />
            <span asp-validation-for="orderId" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label" for="exampleInputEmail1">Customer Name</label>

        <div class="col-sm-6 ">
            <input class="form-control" asp-for="customerName" />
            <span asp-validation-for="customerName" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label" for="exampleInputEmail1">Sweater Type</label>

        <div class="col-sm-6 ">
            <input class="form-control" asp-for="sweaterType" />
            <span asp-validation-for="sweaterType" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label" for="exampleInputEmail1">Quantity</label>

        <div class="col-sm-6 ">
            <input class="form-control" asp-for="quantity" />
            <span asp-validation-for="quantity" class="text-danger"></span>
        </div>
    </div>   

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label" for="exampleInputEmail1">Status</label>

        <div class="col-sm-6 ">
            <input class="form-control" asp-for="status" />
            <span asp-validation-for="status" class="text-danger"></span>
        </div>
    </div>  
    
    <div class="row mb-3">

        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>

        <div class="col-sm-3 d-grid">
            <a class="btn btn-primary" role="button" href="/"> Cancle</a>
        </div>
    </div>


</form>